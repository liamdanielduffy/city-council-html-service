datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Scrape {
  id            String                @id @default(uuid())
  createdAt     DateTime              @default(now())
  calendarPages ScrapedCalendarPage[]
}

model ScrapedCalendarPage {
  id         String @id @default(uuid())
  html       String @db.LongText
  pageNumber Int
  scrapeId   String
  scrape     Scrape @relation(fields: [scrapeId], references: [id])

  @@index([scrapeId])
}
