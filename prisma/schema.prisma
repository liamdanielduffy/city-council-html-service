datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Snapshot {
  id            String                @id @default(uuid())
  snapshotDate  DateTime              @default(now())
  createdAt     DateTime              @default(now())
  calendarPages ScrapedCalendarPage[]
  numPages      Int
}

model ScrapedCalendarPage {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  html       String   @db.LongText
  pageNumber Int      @unique
  snapshotId String
  snapshot   Snapshot @relation(fields: [snapshotId], references: [id])

  @@index([snapshotId])
}
